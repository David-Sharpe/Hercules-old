= form_for @resistance_exercise do |f|
  - if @resistance_exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resistance_exercise.errors.count, "error")} prohibited this resistance_exercise from being saved:"
      %ul
        - @resistance_exercise.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :resistance
    = f.text_field :resistance
  .field
    = f.label :repetitions
    = f.number_field :repetitions
  .field
    = f.label :sets
    = f.number_field :sets
  .actions
    = f.submit 'Save'
